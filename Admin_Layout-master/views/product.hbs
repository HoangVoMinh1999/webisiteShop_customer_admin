<div class="content mt-3">
  <div class="animated fadeIn">
    <div class="row">

      <div class="col-md-12">
        <div class="card">
          <div class="card-header">
            <strong class="card-title">Sản phẩm</strong>
          </div>
          <div class="card-body">
            <table id="bootstrap-data-table" class="table table-striped table-bordered">
              <thead>
                <tr>
                  <th>Tên sản phẩm</th>
                  <th>Nhãn hiệu</th>
                  <th>Giá thành(VND)</th>
                  <th><button><a href="/add_product">Thêm sản phẩm</a></button></th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each products}}
                <tr>
                  <th>{{name}}</th>
                  <th>{{brand}}</th>
                  <th>{{price}}</th>
                  <th>
                    <form action="/change_info">
                      <button type="submit" name="_id" value="{{_id}}">Chỉnh sửa</button>
                    </form>
                  </th>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>


    </div>
  </div><!-- .animated -->
</div><!-- .content -->